<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_alphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/contact_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_user_light"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeWidth="2dp"
                    android:scaleType="centerInside"
                    app:strokeColor="?attr/colorPrimaryContainer"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Hello"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_20sdp"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    app:icon="@drawable/ic_phone_solid"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetLeft="0dp"
                    app:iconGravity="textStart"
                    app:iconSize="@dimen/_18ssp"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:background="@android:color/transparent"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    app:icon="@drawable/ic_video_light"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetLeft="0dp"
                    app:iconGravity="textStart"
                    app:iconSize="@dimen/_20ssp"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

</LinearLayout>