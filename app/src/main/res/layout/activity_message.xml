<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clMessageActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.message.MessageActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >
        <LinearLayout
            android:id="@+id/view_intro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.5"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:visibility="gone"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                >
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imv_avatar_in_intro_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image_01"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/Circular"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_solid_green_circle"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="@dimen/_4sdp"
                        tools:ignore="RtlHardcoded" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User name"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:paddingTop="@dimen/_10sdp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noti_introduce_new_message"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_message_action"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_message_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_message"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp"
            >
            <LinearLayout
                android:id="@+id/view_action_btn"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/til_input_message"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.25"
                android:visibility="gone"
                >
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_image_solid"
                    app:iconSize="@dimen/_20sdp"
                    />
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_microphone_solid"
                    app:iconSize="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    />

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_input_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/btn_send_message"
                app:layout_constraintLeft_toRightOf="@id/view_action_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_20sdp"
                app:boxCornerRadiusTopStart="@dimen/_20sdp"
                app:boxStrokeWidth="0dp"
                app:boxBackgroundColor="?attr/colorBackgroundFloating"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                android:layout_marginLeft="@dimen/_5sdp"
                app:boxStrokeColor="@null"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="Nháº¯n tin"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_message"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.1"
                app:icon="@drawable/ic_send_solid"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/til_input_message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:iconSize="@dimen/_20sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>